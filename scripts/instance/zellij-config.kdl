default_layout "claude"
default_mode "locked"
pane_frames false
simplified_ui true

keybinds clear-defaults=true {
}

themes {
    default {
        bg "#000000"
        fg "#000000"
        red "#000000"
        green "#000000"
        yellow "#000000"
        blue "#000000"
        magenta "#000000"
        orange "#000000"
        cyan "#000000"
        black "#000000"
        white "#000000"
    }
}

ui {
    pane_frames {
        hide_session_name true
    }
}

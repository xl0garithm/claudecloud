# Provider: "docker" (local dev) or "hetzner" (production)
PROVIDER=docker

# Environment: "development" or "production"
# Controls: log format (JSON vs text), config validation, HSTS
ENVIRONMENT=development

# Database
DATABASE_URL=postgres://cloudcode:cloudcode@localhost:5432/cloudcode?sslmode=disable

# API
LISTEN_ADDR=:8080
API_KEY=dev-api-key

# JWT Auth
JWT_SECRET=dev-jwt-secret-change-in-production

# URLs
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# SMTP (leave empty for dev mode â€” magic links logged to stdout)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-username
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@claudecloud.dev

# Stripe
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_STARTER=price_...
# STRIPE_PRICE_PRO=price_...

# Hetzner (only needed when PROVIDER=hetzner)
# HCLOUD_TOKEN=your-hetzner-api-token

# Netbird (only needed when PROVIDER=hetzner)
# NETBIRD_API_URL=https://api.netbird.io
# NETBIRD_API_TOKEN=your-netbird-api-token

# Activity detection
# ACTIVITY_CHECK_INTERVAL=5m
# IDLE_THRESHOLD=2h

# Claude API Key (injected into instances)
# ANTHROPIC_API_KEY=your-anthropic-key
